{
    "manifest_version": 3,
    "name": "GhostTrader: AI Market Seer",
    "version": "1.0.0",
    "description": "Passive chart analysis assistant powered by the Ghost of Wall Street (Gemini AI).",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "GhostTrader"
    }
}